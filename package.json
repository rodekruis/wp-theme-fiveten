{
	"private": true,
	"devDependencies": {
		"@html-eslint/eslint-plugin": "^0.17.1",
		"@html-eslint/parser": "^0.17.1",
		"@wordpress/env": "^5.13.0",
		"@wordpress/prettier-config": "^2.7.0",
		"archiver": "^5.3.1",
		"confusing-browser-globals": "^1.0.11",
		"cross-env": "^7.0.3",
		"esbuild": "^0.17.11",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-compat": "^4.1.2",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsdoc": "^40.0.1",
		"eslint-plugin-json-schema-validator": "^4.1.0",
		"eslint-plugin-jsonc": "^2.6.0",
		"eslint-plugin-no-unsanitized": "^4.0.2",
		"eslint-plugin-php-markup": "^6.0.0",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-write-good-comments": "^0.1.4",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.21",
		"postcss-cli": "^10.1.0",
		"postcss-import": "^15.1.0",
		"postcss-preset-env": "^8.0.1",
		"prettier": "^2.8.4"
	},
	"scripts": {
		"setup": "cross-env COMPOSE_PROJECT_NAME='510-website'  npx wp-env start",
		"development:css:style": "postcss ./css/style.css --output ./theme/style.css",
		"development:css:editor": "postcss ./css/style-editor.css --output ./theme/style-editor.css",
		"development:js": "npx esbuild ./js/script.js --target=esnext --bundle --outfile=./theme/js/script.min.js",
		"development": "npm-run-all --parallel development:**",
		"dev": "npm run development",
		"watch:css:style": "npm run development:css:style -- --watch",
		"watch:css:editor": "npm run development:css:editor -- --watch",
		"watch:esbuild": "npm run development:js -- --watch",
		"watch": "npm-run-all --parallel watch:**",
		"lint:config": "npx eslint '*.{js,json,jsonc,json5,yaml,yml}'",
		"lint:js": "npx eslint 'js/**/*.js'",
		"lint:php": "npx eslint 'theme/**/*.php'",
		"lint:syntax": "npx prettier --check .",
		"lint": "npm-run-all --parallel lint:*",
		"fix:config": "npm run lint:config -- --fix",
		"fix:js": "npm run lint:js -- --fix",
		"fix:php": "npm run lint:php -- --fix",
		"fix:syntax": "npm run lint:syntax -- --write .",
		"fix": "npm-run-all --parallel fix:*",
		"production:css:style": "cross-env NODE_ENV=production  npm run development:css:style -- --minify",
		"production:css:editor": "cross-env NODE_ENV=production  npm run development:css:editor -- --minify",
		"production:js": "npm run development:js -- --minify",
		"production": "npm-run-all --parallel production:**",
		"prod": "npm run production",
		"zip": "node node_scripts/zip.js fiveten",
		"bundle": "npm-run-all --sequential production zip",
		"test": "npm run lint"
	}
}
